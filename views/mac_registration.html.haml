  #ajax-response

  - field_set_tag do
  
    %p
      = label_tag "Prénom "
      = text_field_tag :first_name, :id => :first_name
  
    %p
      = label_tag "Nom "
      = text_field_tag :name, :id => :name
      
    %p
      = label_tag "Adresse email "
      = text_field_tag :email, :id => :email
      
