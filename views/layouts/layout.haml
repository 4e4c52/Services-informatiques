!!! 5
%html{ :lang => "fr" }
  %head
    %meta{ :charset => "utf-8" }

    = favicon_tag "favicon.ico", :type => "image/ico"
    = favicon_tag "favicon.png", :type => "image/png"
    = stylesheet_link_tag "app.css", :id => "app-stylesheet"
    = stylesheet_link_tag "fancybox.css"
    = javascript_include_tag "jquery.min.js"
    = javascript_include_tag "mobile.min.js"
    = javascript_include_tag "jquery.fancybox.pack.js"
    = javascript_include_tag "app.js"

    = yield_content :head
    
  %body{ :class => page_classes }
  
    #nav
      .wrapper
        %strong Egalement sur #{link_to "isen.fr:", "http://www.isen.fr/brest.asp"}
        &nbsp;
        = link_to "ENT", "https://web-brest.isen.fr/"
        &nbsp;|&nbsp;
        = link_to "Moodle", "http://web-brest.isen.fr/moodle/"
        &nbsp;|&nbsp;
        = link_to "Admin", "admin/", :id => "iadm", :style => "display:none;"
        %span#design-box
          Interface&nbsp;
          = select_tag(:design, :options => [['ISEN', 'isen'], ['alternative', 'alternate']], :id => :design)
             
    #header
      .wrapper
        %h1#logo= link_to "Services informatiques", "index.html", :id => "logo-home"
        
        %ul#menu
          %li
            %strong
              = link_to "ISEN Brest", "index.html", :style => "display:none;", :id =>"isen-title"
          %li= link_to "Accueil", "index.html", :id => "home"
          %li.expandable
            = link_to "Tutoriels", "index.html", :id => "tuts-index"
            #tuts{ :style => "display:none;" }
              %hr
              %dl#left
                %dt Commencez Ici
                %dd= link_to "Accéder au Réseau", "tuts/network.html"
                %dt Courrier Electronique
                %dd= link_to "Accéder à la Messagerie", "tuts/email.html"
                %dd= link_to "Configuration de Thunderbird", "tuts/thunderbird.html"
                %dd= link_to "Note sur le Filtrage et l'Annuaire", "tuts/email_note.html"
                %dt ENT
                %dd= link_to "Configuration de la Messagerie", "tuts/ent_email.html"
                %dd= link_to "Configuration de l'Agenda", "tuts/ent_calendar.html"
              %dl#right
                %dt Imprimantes
                %dd= link_to "Utilisation sur le Réseau", "tuts/printers.html"
                %dt VirtualBox
                %dd= link_to "Configuration et Utilisation", "tuts/virtualbox.html"
                %dt Subversion
                %dd= link_to "Configuration et Utilisation", "tuts/subversion.html"
                %dt VOIP
                %dd= link_to "Note sur la VOIP", "tuts/voip.html"
                %dd Programmation
                %dd= link_to "Installer Ruby sur Windows", "tuts/windows_ruby_install.html"
                %dt Développement Web
                %dd= link_to "Développer avec The Middleman", "tuts/middleman.html"
          %li= link_to "Offres", "offers.html", :id => "offers"
          %li= link_to "Enregistrement", "registration.html", :id => "registration"
        
        .clearfix
        
    %hr.hide
    
    #mobile-tuts{ :style => "display:none" }
      .wrapper
    
    #feature
      .wrapper
        = yield_content :feature
        - unless sub_col_empty?(yield_content :subcol)
          #sub-col
            = yield_content :subcol
    
    #container
      .wrapper
        #mobile-sub-col
        #main-col
          = yield
    
    %hr.hide
    
    #footer
      .wrapper
        %p ISEN - Brest &copy; 2011
        %p Réalisé par #{link_to "Nathan Le Ray", "http://syrinxoon.net"}, powered by #{link_to "MongoDB", "http://www.mongodb.org/"}.